{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*.ts",
        "./.jest/jest.d.ts",
        "./data/*",
        "./global.d.ts"
    ],
    // Excluding mocks so our tests do not fail on CI
    // If we exclude tests here, it will also help stop tests from failing on CI
    // But then toContainFact does the angry red squiggle in VSCode
    "exclude": ["**/__mocks__/*"]
}
