{
    "compilerOptions": {
        "target": "es2016", 
        "module": "commonjs",
        "moduleResolution": "node", 
        "lib": ["es6"], 
        "allowJs": true,
        "outDir": "build",  
        "rootDir": "src",
        "strict": true, 
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true, 
        "sourceMap": true,
    },
    "include": [
        "./src/**/*.ts",
        "./types/*.d.ts",
        "jest.d.ts",
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
