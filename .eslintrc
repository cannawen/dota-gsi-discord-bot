{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env": {
        "jest": true,
        "node": true
    },
    "plugins": ["@typescript-eslint", "jest", "no-loops"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
        // if we enable prettier here, all the eslint goodness goes away.
        // "prettier"
    ],
    "overrides": [
        {
            "files": ["*.test.ts"],
            "rules": {
                "@typescript-eslint/no-var-requires": ["off"],
                "max-lines-per-function": ["off"],
                "max-nested-callbacks": ["off"],
                "no-magic-numbers": ["off"],
                "@typescript-eslint/no-non-null-assertion": ["off"],
                "sort-keys": ["off"],
                "@typescript-eslint/no-explicit-any": ["off"]
            }
        }
    ],
    "rules": {
        // jest plugin rules
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error",
        // no-loops plugin rules
        "no-loops/no-loops": "warn",
        //t ypescript
        "@typescript-eslint/no-empty-function": "warn",
        // eslint
        // I would really like this, but it will interfere with prettier
        // "keyword-spacing": ["warn", { "before": true, "after": true }]
        "spaced-comment": ["warn", "always"],
        "for-direction": "warn",
        "getter-return": ["warn", { "allowImplicit": false }],
        "no-await-in-loop": "warn",
        "no-async-promise-executor": "warn",
        "no-compare-neg-zero": "warn",
        "no-cond-assign": ["warn", "except-parens"],
        "no-control-regex": "warn",
        "no-constant-condition": ["warn", { "checkLoops": true }],
        "no-console": "warn",
        "no-debugger": "warn",
        "no-dupe-args": "warn",
        "no-dupe-keys": "warn",
        "no-duplicate-case": "warn",
        "no-empty": ["warn", { "allowEmptyCatch": false }],
        "no-empty-character-class": "warn",
        "no-ex-assign": "warn",
        "no-extra-boolean-cast": "warn",
        "no-func-assign": "warn",
        "no-inner-declarations": ["warn", "functions"],
        "no-invalid-regexp": "warn",
        "no-misleading-character-class": "warn",
        "no-obj-calls": "warn",
        "no-prototype-builtins": "warn",
        "no-regex-spaces": "warn",
        "no-sparse-arrays": "warn",
        "no-template-curly-in-string": "warn",
        "no-unreachable": "warn",
        "no-unsafe-finally": "warn",
        "no-unsafe-negation": "warn",
        "require-atomic-updates": "warn",
        "use-isnan": "warn",
        "valid-typeof": ["warn", { "requireStringLiterals": false }],
        "array-callback-return": ["warn", { "allowImplicit": false }],
        "block-scoped-var": "warn",
        "class-methods-use-this": "warn",
        "complexity": ["warn", { "max": 20 }],
        "default-case": ["warn", { "commentPattern": "" }],
        "dot-notation": ["warn", { "allowKeywords": true, "allowPattern": "" }],
        "eqeqeq": ["warn", "always"],
        "guard-for-in": "warn",
        "max-classes-per-file": ["warn", 1],
        "no-alert": "warn",
        "no-caller": "warn",
        "no-case-declarations": "warn",
        "no-div-regex": "warn",
        "no-empty-function": "warn",
        "no-empty-pattern": "warn",
        "no-eq-null": "warn",
        "no-eval": ["warn", { "allowIndirect": false }],
        "no-extend-native": "warn",
        "no-extra-bind": "warn",
        "no-extra-label": "warn",
        "no-fallthrough": ["warn", { "commentPattern": "" }],
        "no-floating-decimal": "warn",
        "no-global-assign": "warn",
        "no-implicit-coercion": [
            "warn",
            { "boolean": true, "number": true, "string": true }
        ],
        "no-implicit-globals": "warn",
        "no-implied-eval": "warn",
        "no-invalid-this": "warn",
        "no-iterator": "warn",
        "no-labels": ["warn", { "allowLoop": false, "allowSwitch": false }],
        "no-lone-blocks": "warn",
        "no-loop-func": "warn",
        "no-magic-numbers": [
            "warn",
            {
                "detectObjects": false,
                "enforceConst": false,
                "ignoreArrayIndexes": false
            }
        ],
        "no-new": "warn",
        "no-new-func": "warn",
        "no-new-wrappers": "warn",
        "no-octal": "warn",
        "no-octal-escape": "warn",
        "no-param-reassign": ["warn", { "props": false }],
        "no-proto": "warn",
        "no-redeclare": ["warn", { "builtinGlobals": false }],
        "no-restricted-properties": "warn",
        "no-return-await": "warn",
        "no-script-url": "warn",
        "no-return-assign": ["warn", "except-parens"],
        "no-self-assign": ["warn", { "props": true }],
        "no-self-compare": "warn",
        "no-sequences": "warn",
        "no-throw-literal": "warn",
        "no-unmodified-loop-condition": "warn",
        "no-unused-labels": "warn",
        "no-unused-expressions": [
            "warn",
            {
                "allowShortCircuit": false,
                "allowTernary": false,
                "allowTaggedTemplates": false
            }
        ],
        "no-useless-call": "warn",
        "no-useless-catch": "warn",
        "no-useless-concat": "warn",
        "no-useless-escape": "warn",
        "no-useless-return": "warn",
        "no-with": "warn",
        "yoda": ["warn", "never"],
        "no-delete-var": "warn",
        "no-label-var": "warn",
        "no-restricted-globals": "warn",
        "no-shadow": [
            "warn",
            { "builtinGlobals": false, "hoist": "functions" }
        ],
        "no-shadow-restricted-names": "warn",
        "no-undef": ["warn", { "typeof": false }],
        "no-undef-init": "warn",
        "no-use-before-define": [
            "warn",
            { "functions": true, "classes": true, "variables": true }
        ],
        "callback-return": "warn",
        "global-require": "warn",
        "no-buffer-constructor": "warn",
        "no-mixed-requires": [
            "warn",
            { "grouping": false, "allowCall": false }
        ],
        "no-new-require": "warn",
        "no-path-concat": "warn",
        "no-process-exit": "warn",
        "camelcase": [
            "warn",
            { "ignoreDestructuring": false, "properties": "always" }
        ],
        "max-lines-per-function": [
            "warn",
            {
                "skipBlankLines": false,
                "skipComments": false,
                "IIFEs": false,
                "max": 50
            }
        ],
        "max-nested-callbacks": ["warn", { "max": 3 }],
        "max-params": ["warn", { "max": 4 }],
        "max-statements": ["warn", 12],
        "max-statements-per-line": ["warn", { "max": 1 }],
        "new-cap": [
            "warn",
            {
                "newIsCap": true,
                "capIsNew": true,
                "newIsCapExceptionPattern": "",
                "capIsNewExceptionPattern": "",
                "properties": true
            }
        ],
        "new-parens": "warn",
        "no-array-constructor": "warn",
        "no-bitwise": ["warn", { "int32Hint": false }],
        "no-continue": "warn",
        "no-inline-comments": "warn",
        "no-lonely-if": "warn",
        "no-multi-assign": "warn",
        "no-negated-condition": "warn",
        "no-nested-ternary": "warn",
        "no-new-object": "warn",
        "no-plusplus": ["warn", { "allowForLoopAfterthoughts": false }],
        "no-underscore-dangle": [
            "warn",
            {
                "allowAfterThis": false,
                "allowAfterSuper": false,
                "enforceInMethodNames": false
            }
        ],
        "no-unneeded-ternary": ["warn", { "defaultAssignment": true }],
        "prefer-object-spread": "warn",
        "sort-keys": [
            "warn",
            "asc",
            { "caseSensitive": true, "natural": false }
        ],
        "sort-vars": ["warn", { "ignoreCase": false }],
        "arrow-body-style": ["warn", "as-needed"],
        "arrow-parens": ["warn", "always"],
        "constructor-super": "warn",
        "no-class-assign": "warn",
        "no-confusing-arrow": ["warn", { "allowParens": false }],
        "no-const-assign": "warn",
        "no-dupe-class-members": "warn",
        "no-duplicate-imports": ["warn", { "includeExports": false }],
        "no-new-symbol": "warn",
        "no-this-before-super": "warn",
        "no-useless-computed-key": "warn",
        "no-useless-constructor": "warn",
        "no-useless-rename": [
            "warn",
            {
                "ignoreDestructuring": false,
                "ignoreImport": false,
                "ignoreExport": false
            }
        ],
        "no-var": "warn",
        "prefer-const": [
            "warn",
            { "ignoreReadBeforeAssign": false, "destructuring": "any" }
        ],
        "prefer-numeric-literals": "warn",
        "prefer-rest-params": "warn",
        "prefer-spread": "warn",
        "prefer-template": "warn",
        "sort-imports": [
            "warn",
            { "ignoreCase": true, "ignoreMemberSort": false }
        ]
    }
}
